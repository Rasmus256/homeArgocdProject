{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "packageRules": [
    {
      "automerge": true,
      "ignoreTests": true,
      "matchPackageNames": [
        "/.*/"
      ]
    },
    {
      "matchPackageNames": [
        "homeassistant/home-assistant"
      ],
      "matchUpdateTypes": [
        "major",
        "minor"
      ],
      "automerge": false,
      "ignoreTests": true
    },
    {
      "matchPackageNames": [
        "docker.io/actualbudget/actual-server"
      ],
      "matchUpdateTypes": [
        "minor",
        "patch",
        "pin",
        "digest"
      ],
      "automerge": false,
      "ignoreTests": true
    }
  ]
}
