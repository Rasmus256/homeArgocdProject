{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "packageRules": [
    {
      "matchPackageNames": ["*"],
      "automerge": true,
      "ignoreTests": true
    },
    {
      "matchPackageNames": ["homeassistant/home-assistant"],
      "matchUpdateTypes": ["minor", "patch", "pin", "digest"],
      "automerge": false,
      "ignoreTests": true
    }
  ]
}
